    border-radius: 30px;
    border: 0;
    cursor: pointer;
    display: inline-block;
    font-size: .75em;
    font-weight: 400;
    height: 3.75em;
    line-height: 3.85em;
    letter-spacing: 2px;
    padding: 0 4em;
    text-align: center;
    text-decoration: none;
    text-transform: uppercase;
    white-space: nowrap;
    width: 250px;
    background: linear-gradient(to bottom, rgba(75, 75, 93, 0.1), rgba(75, 75, 93, 0.1));
  }

  .login-button {
    font-weight: bolder !important;
  }

  .footer {
    grid-area: 'footer';
    background-color: #222;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    border-top: 1px solid rgba(255, 255, 255, 0.4);
    background: linear-gradient(to bottom, rgba(75, 75, 93, 0.35), rgba(75, 75, 93, 0.35));
