<style media="screen">
  * {
    box-sizing: border-box;
    padding: 0;
    margin: 0;
    font-family: sans-serif;
  }

  body, html {
    height: 100%;
    min-height: 100%;
    background-image: url(../../public/assets/images/pill.png);
    background-size: cover;
    background-repeat: no-repeat;
  }

  img {
    width: 100%;
    max-width: 100% !important;
    max-height: 100% !important;
  }

