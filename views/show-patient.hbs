<style media="screen">
  .modal {
    display: none; /* Hidden by default */
    position: fixed; /* Stay in place */
    z-index: 1; /* Sit on top */
    padding-top: 100px; /* Location of the box */
    left: 0;
    top: 0;
    width: 100%; /* Full width */
    height: 100%; /* Full height */
    overflow: auto; /* Enable scroll if needed */
    background-color: rgb(0,0,0); /* Fallback color */
    background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
  }

  /* Modal Content */
  .modal-content {
    position: relative;
    background-color: #fefefe;
    margin: auto;
    padding: 0;
    border: 1px solid #888;
    width: 80%;
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2),0 6px 20px 0 rgba(0,0,0,0.19);
    -webkit-animation-name: animatetop;
    -webkit-animation-duration: 0.4s;
    animation-name: animatetop;
    animation-duration: 0.4s
  }

  /* Add Animation */
  @-webkit-keyframes animatetop {
    from {top:-300px; opacity:0}
    to {top:0; opacity:1}
  }

  @keyframes animatetop {
    from {top:-300px; opacity:0}
    to {top:0; opacity:1}
  }

  /* The Close Button */
  .close {
    color: white;
    float: right;
    font-size: 28px;
    font-weight: bold;
  }

  .close:hover,
  .close:focus {
    color: #000;
    text-decoration: none;
    cursor: pointer;
  }

  .modal-header {
    padding: 2px 16px;
    background-color: #6cc091;
    color: white;
  }

  .modal-body {padding: 2px 16px;}

  .modal-body h2 {
    border-right: 1px solid grey;
    padding-right: 10px;
    padding-left: 10px;
  }

  .modal-footer {
    padding: 2px 16px;
    background-color: #6cc091;
    color: white;
  }

  .patient-basic-info {
    font-family: 'Open Sans Condensed', arial, sans;
    width: 500px;
    padding: 30px;
    background: #FFFFFF;
    margin: 50px auto;
    box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.22);
    -moz-box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.22);
    -webkit-box-shadow:  0px 0px 15px rgba(0, 0, 0, 0.22);
  }

  .patient-basic-info h2 {
    background: #4D4D4D;
    text-transform: uppercase;
    font-family: 'Open Sans Condensed', sans-serif;
    color: #6cc091;
    font-size: 18px;
    font-weight: 100;
    padding: 20px;
    margin: -30px -30px 30px -30px;
    text-align: center;
  }

  #medicationBtn {
    background-color: #6cc091 !important;
    color: white;
    border: none;
  }

</style>


<div class="container">

  <!-- The Modal -->
  <div id="myModal" class="modal">

    <!-- Modal content -->
    <div class="modal-content">
      <div class="modal-header">
        <span class="close">&times;</span>
        <h2>Previous Medication and Prescription</h2>
      </div>
      <div class="modal-body">
        <div class="separation-content">
          <div class="each-medication" style="display: flex; flex-direction: row; align-items: center;">
            <h2>Name: {{medication}}</h1>
            <h2>Dosage: {{dosage}} </h2>
            <h2>Date Prescribed: {{date}}</h2>
            <h2>Quantity: {{quantity}}</h2>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <h3>End of List</h3>
      </div>
    </div>

  </div>

  <div class="patient-basic-info">
    <h2>{{firstname}} {{lastname}}</h2>
    <div class="dobAndMedication" style="display: flex; flex-direction: row; align-items: center;">
      <h3>DOB: {{birthday}}</h3>
      <button type="button" id="medicationBtn">See All Prescription</button>
    </div>

  </div>


</div>


<script>
  // Get the modal
  var modal = document.getElementById('myModal');

  // Get the button that opens the modal
  var btn = document.getElementById("medicationBtn");

  // Get the <span> element that closes the modal
  var span = document.getElementsByClassName("close")[0];

  // When the user clicks the button, open the modal
  btn.onclick = function() {
      modal.style.display = "block";
  }

  // When the user clicks on <span> (x), close the modal
  span.onclick = function() {
      modal.style.display = "none";
  }

  // When the user clicks anywhere outside of the modal, close it
  window.onclick = function(event) {
      if (event.target == modal) {
          modal.style.display = "none";
      }
  }
</script>
